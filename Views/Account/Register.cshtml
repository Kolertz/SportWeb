@model SportWeb.Models.RegisterViewModel
<!DOCTYPE html>
    <html>
    <head>
        <meta charset='utf-8' />
        <title>Register</title>
    </head>
    <body>
        <h2>Register</h2>
        <form asp-controller="Account" asp-action="Register" asp-antiforgery="true">
        @Html.AntiForgeryToken()
            <p>
                <label asp-for="Name"></label>
                <input type='text' asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"/>
            </p>
            <p>
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"/>
            </p>
            <p>
                <label asp-for="Password"></label>
                <input type='password' asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"/>
            </p>
            <p>
                <label asp-for="ConfirmPassword"></label>
                <input type='password' asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"/>
            </p>
            <input type='submit' value='Register' />
        </form>
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
    </body>
    </html>
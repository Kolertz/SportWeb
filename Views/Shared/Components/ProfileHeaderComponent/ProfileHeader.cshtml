@model ProfileHeaderViewModel

@if (User.Identity is not null && User.Identity.IsAuthenticated)
{
    <div>
        <a asp-action="Profile" asp-controller="Account" asp-route-id="@Model.Id">
            <img src="@Model.Avatar" alt="Avatar" style="width: 50px; height: 50px; border-radius: 50%;" />
        </a>
        <br />
        <a asp-action="Profile" asp-controller="Account" asp-route-id="@Model.Id">@Model.UserName</a>
    </div>
}

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div style="display: flex; flex-direction: column;">
        <a asp-action="Profile" asp-controller="Account" asp-route-id="@ViewBag.Model.Id">
            <img src="@ViewBag.Model.Avatar" alt="Avatar" style="width: 50px; height: 50px; border-radius: 50%;" />
        </a>
        <a asp-action="Profile" asp-controller="Account" asp-route-id="@ViewBag.Model.Id">@ViewBag.Model.UserName</a>
    </div>
}

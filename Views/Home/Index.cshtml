@{
    var user = ViewBag.User as User;
}
<div><a asp-controller="Exercise" asp-action="Index">All Exerecises</a></div>
@if (User.Identity is not null && User.Identity.Name is not null)
{
    if (ViewBag.IsAdmin)
    {
        <div>
            <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Panel</a>
        </div>
    }
    <div>
        <a asp-controller="Exercise" asp-action="Add">Add Exercise</a>
    </div>
    @if ( user is not null)
    {
        <div>
            <a asp-controller="Workout" asp-action="UserWorkouts" asp-route-id="@user.Id">My Workouts</a>
        </div>
    }
    <a asp-controller="Account" asp-action="Logout">Log out</a>
        
} else
{
    <a asp-controller="Account" asp-action="Login">Log in</a>
    <a asp-controller="Account" asp-action="Register">Register</a>
}